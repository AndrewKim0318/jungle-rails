<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Categories', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Category</th>
          <th>Number of Products</th>
        </tr>
      </thead>
      <tbody>
        <% @category.each do |category_item| %>
          <%= render 'category', category: category_item %>
        <% end %>
      </tbody>
    </table>

  </div>

</section>
