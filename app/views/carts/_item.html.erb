<tr class="item-container">
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4 class="spaced"><%= product.name %></h4>
    <br>
    <p class="spaced"><%= product.description %></p>
    <br>
    <table class="spaced">
      <tr>
        <th>Unit Price</th>
        <th>Quantity</th>
      </tr>
      <tr>
        <td> <%= product.price %> </td>
        <td>
          <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
          <%= quantity %>
          <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' do %> + <% end %>
        </td>
      </tr>
    </table>
  </td>
  <td>
    <%= product.price * quantity %>
  </td>
</tr>
